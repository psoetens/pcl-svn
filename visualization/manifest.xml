<package>
  <description>
    <p>
      PCL (Point Cloud Library) Visualization: a library for PointCloud2
      visualizations. Includes C++ API for visualizing pcl::PointCloud data,
      as well as tools for visualizing PointCloud2 messages and PCD files.  
    </p>
  </description>

  <author>Radu Bogdan Rusu, Bastian Steder, Ethan Rublee</author>
  <license>BSD</license>
  <url>http://www.ros.org/wiki/pcl_visualization</url>
  <review status="experimental" notes="beta"/>

  <depend package="eigen"/>
  <depend package="pcl"/>
  <depend package="pcl_ros"/>
  <depend package="wxpropgrid"/> 
  <depend package="terminal_tools"/> 

  <rosdep name="wxwidgets"/>
  <rosdep name="libtiff"/>
  <rosdep name="libvtk"/>
  <rosdep name="cmake"/>

  <export>
    <cpp cflags="-I`cmake -P ${prefix}/vtk_include.cmake` -I${prefix}/include -I${prefix}/src" lflags="-L`cmake -P ${prefix}/vtk_library.cmake` -Wl,-rpath,${prefix}/lib -L${prefix}/lib -lpcl_visualization -lvtkCommon -lvtkWidgets -lvtkHybrid -lvtkFiltering -lvtkGraphics -lvtkRendering" />
    <!--nodelet plugin="${prefix}/pcl_visualization_nodelets.xml" /-->
  </export>
  
  <platform os="ubuntu" version="10.04"/>
  <platform os="ubuntu" version="10.10"/>
</package>
